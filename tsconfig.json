{
  "compilerOptions": {
    "strict": true,
    "target": "esnext",
    "module": "esnext",
    "sourceMap": true,
    "jsx": "preserve",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true
  },
  "include": [
    "src/**/*",
    "components/**/*",
    "site/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
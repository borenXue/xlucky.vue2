{
  "compilerOptions": {
    "strict": true,
    "target": "esnext",
    "module": "esnext",
    "sourceMap": true,
    "jsx": "preserve",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "importHelpers": true,
    "declaration": true,
    "declarationDir": "lib",
    "declarationMap": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "types": ["webpack", "node", "element-ui"],
    "lib": ["esnext", "dom", "dom.iterable"]
  },
  "include": ["types/**/*", "src/**/*", "components/**/*", "docsite/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
